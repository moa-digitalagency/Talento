# Configuration de base
SECRET_KEY=your-secret-key-here
DATABASE_URL=sqlite:///talento.db

# Active l'initialisation automatique de la base de données au premier démarrage
# IMPORTANT: Définir à 1 pour initialiser automatiquement les pays, villes et compte admin
ENABLE_AUTO_SEED=1

# Mot de passe du compte admin (par défaut: @4dm1n)
ADMIN_PASSWORD=@4dm1n

# Configuration Email (optionnel)
MAIL_SERVER=smtp.gmail.com
MAIL_PORT=587
MAIL_USE_TLS=True
MAIL_USERNAME=your-email@gmail.com
MAIL_PASSWORD=your-app-password
MAIL_DEFAULT_SENDER=your-email@gmail.com

# SendGrid (optionnel)
# SENDGRID_API_KEY=your-sendgrid-api-key
